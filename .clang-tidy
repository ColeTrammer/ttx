---
WarningsAsErrors: "*"
FormatStyle: none
HeaderFilterRegex: .*
ExcludeHeaderFilterRegex: ".*ccpp/.*"
ExtraArgs: [-std=gnu++26, -fconstexpr-steps=10000000, -Wno-unknown-warning-option, -fsized-deallocation]
Checks: >
  -*,
  bugprone-*,
  -bugprone-crtp-constructor-accessibility,
  -bugprone-easily-swappable-parameters,
  -bugprone-inc-dec-in-conditions,
  -bugprone-macro-parentheses,
  -bugprone-reserved-identifier,
  readability-*,
  -readability-avoid-nested-conditional-operator,
  -readability-convert-member-functions-to-static,
  -readability-function-size,
  -readability-identifier-length,
  -readability-implicit-bool-conversion,
  -readability-magic-numbers,
  -readability-make-member-function-const,
  -readability-math-missing-parentheses,
  -readability-named-parameter,
  -readability-static-accessed-through-instance,
# modernize-use-trailing-return-type,
# cert-*,
# concurrency-*,
# misc-*,
# modernize-*,
# performance-*,
# portability-*,
# readability-*,
# -bugprone-easily-swappable-parameters,
# -bugprone-reserved-identifier,-cert-dcl37-c,-cert-dcl51-cpp,
# -cert-dcl21-cpp,
# -cert-dcl58-cpp,
# -modernize-deprecated-headers,
# -modernize-use-trailing-return-type,
# -modernize-use-nodiscard,
# -modernize-use-noexcept,
# -misc-no-recursion,
# -misc-non-private-member-variables-in-classes,
# -misc-use-anonymous-namespace,
# -misc-include-cleaner,
# -performance-noexcept-move-constructor,
# -performance-no-int-to-ptr,
CheckOptions:
  - key: bugprone-dangling-handle.HandleClasses
    value: "di::StringView;di::Span"
  - key: bugprone-sizeof-expression.WarnOnSizeOfPointerToAggregate
    value: false
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: true
  - key: readability-implicit-bool-conversion.AllowIntegerConditions
    value: true
  - key: readability-function-cognitive-complexity.Threshold
    value: 60
  - key: readability-function-cognitive-complexity.IgnoreMacros
    value: true
  - key: readability-uppercase-literal-suffix.NewSuffixes
    value: L;UL;ULL;L;LL;LU;LLU;Z;ZU
